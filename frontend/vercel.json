{
  "version": 2,
  "installCommand": "echo 'Frontend only - no dependencies needed'",
  "buildCommand": "cd .. && node inject-api-url.js",
  "builds": [
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/index.html"
    },
    {
      "src": "/login",
      "dest": "/login-fixed.html"
    },
    {
      "src": "/login/",
      "dest": "/login-fixed.html"
    },
    {
      "src": "/register",
      "dest": "/election-registration.html"
    },
    {
      "src": "/register/",
      "dest": "/election-registration.html"
    },
    {
      "src": "/admin-dashboard",
      "dest": "/admin-dashboard-enhanced.html"
    },
    {
      "src": "/admin-dashboard/",
      "dest": "/admin-dashboard-enhanced.html"
    },
    {
      "src": "/portal",
      "dest": "/personal-portal.html"
    },
    {
      "src": "/portal/",
      "dest": "/personal-portal.html"
    },
    {
      "src": "/verify",
      "dest": "/student-verification.html"
    },
    {
      "src": "/verify/",
      "dest": "/student-verification.html"
    },
    {
      "src": "/signup-complete",
      "dest": "/signup-complete.html"
    },
    {
      "src": "/signup-complete/",
      "dest": "/signup-complete.html"
    },
    {
      "src": "/home",
      "dest": "/index.html"
    },
    {
      "src": "/home/",
      "dest": "/index.html"
    },
    {
      "src": "/index",
      "dest": "/index.html"
    },
    {
      "src": "/index/",
      "dest": "/index.html"
    },
    {
      "src": "/config.js",
      "dest": "/config.js"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ]
}

