{
  "version": 2,
  "rewrites": [
    {
      "source": "/",
      "destination": "/frontend/index.html"
    },
    {
      "source": "/login",
      "destination": "/frontend/login-fixed.html"
    },
    {
      "source": "/login/",
      "destination": "/frontend/login-fixed.html"
    },
    {
      "source": "/register",
      "destination": "/frontend/election-registration.html"
    },
    {
      "source": "/register/",
      "destination": "/frontend/election-registration.html"
    },
    {
      "source": "/admin-dashboard",
      "destination": "/frontend/admin-dashboard-enhanced.html"
    },
    {
      "source": "/admin-dashboard/",
      "destination": "/frontend/admin-dashboard-enhanced.html"
    },
    {
      "source": "/portal",
      "destination": "/frontend/personal-portal.html"
    },
    {
      "source": "/portal/",
      "destination": "/frontend/personal-portal.html"
    },
    {
      "source": "/verify",
      "destination": "/frontend/student-verification.html"
    },
    {
      "source": "/verify/",
      "destination": "/frontend/student-verification.html"
    },
    {
      "source": "/signup-complete",
      "destination": "/frontend/signup-complete.html"
    },
    {
      "source": "/signup-complete/",
      "destination": "/frontend/signup-complete.html"
    },
    {
      "source": "/home",
      "destination": "/frontend/index.html"
    },
    {
      "source": "/home/",
      "destination": "/frontend/index.html"
    },
    {
      "source": "/index",
      "destination": "/frontend/index.html"
    },
    {
      "source": "/index/",
      "destination": "/frontend/index.html"
    },
    {
      "source": "/config.js",
      "destination": "/frontend/config.js"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ]
}
