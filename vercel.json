{
  "version": 2,
  "builds": [
    {
      "src": "saku-strategy/backend/manage.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "saku-strategy/backend/manage.py"
    }
  ],
  "env": {
    "SECRET_KEY": "@secret-key",
    "DEBUG": "False",
    "ALLOWED_HOSTS": "*.vercel.app",
    "ADMIN_PHONE_NUMBER": "+254769582779"
  }
}
